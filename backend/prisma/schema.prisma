generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int           @id @default(autoincrement())
  email           String        @unique
  name            String?
  phone           String?
  school          String?
  init_date_school DateTime?
  end_date_school DateTime?
  // software_skills String[]      // Representa um array de strings
  // personal_skills String[]      // Representa um array de strings
  portfolio_url   String?
  password        String
  createdAt       DateTime      @default(now())
  Application     Application[]
}

model Oportunity {
  id                   Int           @id @default(autoincrement())
  jobTitle             String
  contractType         String
  requirements         String[]
  jobDescription       String
  managedJob           String
  externalUrl          String
  experienceLevel      String
  benefits             String[]
  location             String
  workSchedule         String
  availablePositions   Int
  expectedStartDate    DateTime
  companyInfo          Json
  mainResponsibilities String[]
  toolsAndSoftware     Json[]
  publicationDate      DateTime
  applicationDeadline  DateTime
  isAvailable          Boolean       @default(true)
  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @updatedAt
  Application          Application[]
}

model Application {
  id           Int        @id @default(autoincrement())
  userId       Int
  oportunityId Int
  appliedAt    DateTime   @default(now())
  comment      String?
  oportunity   Oportunity @relation(fields: [oportunityId], references: [id])
  user         User       @relation(fields: [userId], references: [id])

  @@unique([userId, oportunityId])
}
